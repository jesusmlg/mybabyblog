<div align="center">
	<h2>ZONA DE ADMINISTRACIÓN</h2>

	<h3>
		<%= link_to 'Nuevo artículo del blog' ,new_article_path(session[:baby]) %>
	</h3>

	<table class="table table-hover" id="table_articles" cellpaddin="0" cellspacing="0" border="0">
		<tr>
			<th width="100">Fecha</th>
			<th>Titular</th>
			<th width="60"></th>
			<th width="60"></th>
		</tr>
		<% @articles.each do |art| %>
			<tr>
				<td><%= art.my_date %></td>
				<td><%= art.title %></td>
				<td><%= link_to 'Editar' , edit_article_path(art) %></td>
				<td><%= link_to 'Borrar' , art, method: :delete, data: {confirm: "¿Estás segur@ de querer borrar el artículo?"} %></td>
			</tr>
		<% end %>
	</table>
</div>
<h2>LISTA DE REGALOS</h2>
<h2><%= link_to 'NUEVO' , new_gift_path %></h2>
<table id="table_gifts" border="0" cellpadding="0" cellspacing="0">
	<tr>
		<th>REGALO</th>
		<th>ASIGNADO A</th>
		<th>ACCIONES</th>
	</tr>
	<% @gifts.each do |g| %>
	<tr>
		<td><%= g.name %></td>
		<td><%= if g.person.blank? then 'Sin Asignar' else g.person end  %></td>
		<td><%= link_to 'Actualizar' , edit_gift_path(g) %> - <%= link_to 'Eliminar', g, method: :delete, data: {confirm: "¿Estás segur@ de querer borrar este regalo?"}  %></td>
	</tr>

	<% end %>
</table>

<h2><%= link_to 'VOLVER' , parents_panel_path %></h2>